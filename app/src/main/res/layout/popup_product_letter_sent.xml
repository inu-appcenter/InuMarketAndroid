<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a7000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_product">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_product_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="120.6dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <View
            android:id="@+id/image_popup_productimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="195.4dp"
            android:background="@drawable/radius_top"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageButton
            android:id="@+id/btn_popup_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ckose" />

        <View
            android:id="@+id/view_popup_thecheat"
            android:layout_width="match_parent"
            android:layout_height="68.8dp"
            android:layout_marginTop="126.6dp"
            android:background="@drawable/radius_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_popup_productimage" />

        <TextView
            android:id="@+id/txt_popup_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="33.8dp"
            android:textSize="18sp"
            android:textColor="@color/Textgunmetal"
            android:gravity="center"
            android:text="의심번호 조회 해보기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageButton
            android:id="@+id/btn_popup_thecheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:layout_marginBottom="11.8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_popup_thecheat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rectangle_10" />

        <TextView
            android:id="@+id/txt_popup_productinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.6dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:lines="4"
            android:lineSpacingExtra="1dp"
            android:text="상품명: 전동 자전거\n\n내 이름:정고운\n전화번호:01000000000"
            android:textColor="@color/Textgunmetal"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/view_popup_thecheat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_popup_productimage" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_popup_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="확인"
        android:textColor="@color/Textgunmetal"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bottom_confirm"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txt_popup"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="44dp"
        android:text="판매자에게 내 정보를 보냈습니다.\n판매자 정보는 내 쪽지함에서 확인할 수 있습니다."
        android:lines="2"
        android:textSize="12sp"
        android:textColor="#e4e4e4"
        app:layout_constraintBottom_toTopOf="@+id/btn_popup_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>