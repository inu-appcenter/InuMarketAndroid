<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_Signup02"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/Textgunmetal"
            android:textSize="20sp"
            android:text="학생정보 입력하기"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/img_signup_step2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:src="@drawable/step_std"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_signup_step2_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="28dp"
            android:text="이름"
            android:textColor="@color/Textgunmetal"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_signup_step2" />

        <EditText
            android:id="@+id/et_signup_step2_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            android:paddingStart="14dp"
            android:hint="입력"
            android:inputType="textPersonName"
            android:textColor="#4a4a4a"
            android:textColorHint="#c4c4c4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_signup_step2_name" />

        <TextView
            android:id="@+id/txt_signup_step2_stdid"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="22dp"
            android:text="학번"
            android:textColor="#475058"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/txt_signup_step2_name"
            app:layout_constraintTop_toBottomOf="@+id/et_signup_step2_name" />

        <EditText
            android:id="@+id/et_signup_step2_stdid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="14dp"
            android:hint="입력"
            android:inputType="number"
            android:textColor="#4a4a4a"
            android:textColorHint="#c4c4c4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/et_signup_step2_name"
            app:layout_constraintTop_toBottomOf="@+id/et_signup_step2_name" />

        <TextView
            android:id="@+id/txt_signup_step2_noinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="*학생정보를 입력해야 합니다."
            android:textColor="@color/orangey_red"
            android:textSize="12sp"
            android:layout_marginBottom="14dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/btn_sign2_next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txt_signup_step2_notcollect"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            android:text="*올바른 학번을 입력해주세요."
            android:textColor="@color/orangey_red"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/et_signup_step2_stdid"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_sign2_next"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bottom_confirm"
            android:text="다음"
            android:textSize="20sp"
            android:textColor="@color/Textgunmetal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        
    </android.support.constraint.ConstraintLayout>
</FrameLayout>