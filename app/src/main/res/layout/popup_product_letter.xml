<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#a7000000">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_product_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="162dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <View
            android:id="@+id/image_popup_letter_productimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="154dp"
            android:background="@drawable/radius_top"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btn_popup_letter_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ckose" />

        <TextView
            android:id="@+id/txt_popup_letter_productinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:layout_marginEnd="11dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="14dp"
            android:lines="4"
            android:textSize="16sp"
            android:textColor="@color/Textgunmetal"
            android:text="상품명: 전동 자전거 \n\n내 이름: 정고운\n전화번호:01000000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_popup_letter_productimage" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txt_popup"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:text="판매자에게 위 정보를 전달하면 판매자의 정보를 받습니다."
        android:textColor="#e4e4e4"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/view_popup_letter_btns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_popup_letter_btns"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/Textgunmetal"
        android:gravity="center"
        android:background="@drawable/bottom_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/txt_popup_letter_cancle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="취소"
        android:textSize="16sp"
        android:textColor="@color/Textgunmetal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view_popup_letter_btns"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/txt_popup_letter_send"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="보내기"
        android:textSize="16sp"
        android:textColor="@color/Textgunmetal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_popup_letter_btns"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:background="#9b9b9b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>