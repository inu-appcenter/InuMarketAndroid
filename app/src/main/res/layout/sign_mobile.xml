<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/group" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/img_next"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".register.MainActivity">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:textColor="#475058"
        android:textSize="20sp"
        android:text="휴대폰 인증" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:src="@drawable/main" />

    <ImageView
        android:layout_width="258.3dp"
        android:layout_height="20.7dp"
        android:layout_marginTop="7.7dp"
        android:layout_gravity="center"
        android:src="@drawable/sign_mobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="107dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="내 전화번호" />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:backgroundTint="#f6f8fa"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/black"
        android:gravity="center"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="227dp"
        android:textColor="#fb3a2f"
        android:text=""/>


</LinearLayout>
</RelativeLayout>