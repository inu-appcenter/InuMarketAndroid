<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/view_main_product_image"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:background="#d8d8d8"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txt_main_productname"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        android:text="상품이름"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_main_product_image" />

    <TextView
        android:id="@+id/txt_main_productprice"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="6dp"
        android:text="250000"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_productname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="원"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/txt_main_productprice"
        app:layout_constraintTop_toBottomOf="@+id/txt_main_productname" />


</android.support.constraint.ConstraintLayout>
