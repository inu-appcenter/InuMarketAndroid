<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/productcardview"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_product"
        >

        <ImageView
            android:id="@+id/image_main_product"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:background="@drawable/productrectangle"
            />

        <TextView
            android:id="@+id/txt_main_productname"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="9dp"
            android:text="상품이름"
            android:textColor="#475058"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_main_product_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_main_productprice"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="6dp"
                android:text="250000"
                android:textColor="#475058"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_main_productname" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="원"
                android:textColor="#475058"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/txt_main_productprice"
                app:layout_constraintTop_toBottomOf="@+id/txt_main_productname" />

        </LinearLayout>

    </LinearLayout>
