<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/group" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_next"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".register.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:textColor="#475058"
        android:textSize="20sp"
        android:text="비밀번호 설정하기"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/sign_password" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="13.6dp"
        android:paddingLeft="28dp"
        android:textSize="12sp"
        android:text="비밀번호 입력" />


    <TextView
        android:id="@+id/pasword_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:textColor="#fb3a2f"
        android:gravity="right"
        android:text=""/>

    <EditText
        android:id="@+id/password1"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:textColor="#c4c4c4"
        android:backgroundTint="#f6f8fa"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="입력" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="28dp"
        android:textSize="12sp"
        android:text="비밀번호 재입력" />


    <TextView
        android:id="@+id/pasword_msg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="right"
        android:layout_marginEnd="20dp"
        android:text=""
        android:textColor="#fb3a2f" />
    <EditText
        android:id="@+id/password2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:textColor="#c4c4c4"
        android:backgroundTint="#f6f8fa"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="입력" />


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="188dp"
        android:textColor="#fb3a2f"
        android:text=""/>


</LinearLayout>
</RelativeLayout>