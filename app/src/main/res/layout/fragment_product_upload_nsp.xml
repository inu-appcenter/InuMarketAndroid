<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="11dp"
        android:text="상품명"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/product_upload_product_name"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="18.2dp"
        android:layout_marginTop="3.5dp"
        android:layout_marginEnd="20.2dp"
        android:backgroundTint="@color/cloudy_blue"
        android:ems="10"
        android:hint="입력"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26.9dp"
        android:layout_marginTop="15dp"
        android:text="상품 상태"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_upload_product_name" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/product_upload_product_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18.2dp"
        android:layout_marginTop="3.5dp"
        android:layout_marginEnd="20.2dp"
        android:backgroundTint="@color/cloudy_blue"
        android:ems="10"
        android:hint="ex) 신상 or 중고 3개월 사용"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26.9dp"
        android:layout_marginTop="15dp"
        android:text="가격"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_upload_product_state" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/product_upload_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18.2dp"
        android:layout_marginTop="3.5dp"
        android:layout_marginEnd="20.2dp"
        android:backgroundTint="@color/cloudy_blue"
        android:ems="10"
        android:hint="입력"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />




</android.support.constraint.ConstraintLayout>