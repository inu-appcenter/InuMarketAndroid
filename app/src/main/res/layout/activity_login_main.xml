<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activity.Login_main">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="107dp"
        android:gravity="center"
        android:text="로그인"
        android:textColor="#475058"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_login_student_id"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="32dp"
        android:text="학번"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt_login"
        app:layout_constraintTop_toBottomOf="@+id/txt_login" />

    <EditText
        android:id="@+id/et_login_student_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="4dp"
        android:hint="입력"
        android:inputType="number"
        android:textColor="#4a4a4a"
        android:textColorHint="#c4c4c4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_student_id" />

    <TextView
        android:id="@+id/txt_login_pw"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:text="비밀번호"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txt_login"
        app:layout_constraintTop_toBottomOf="@+id/et_login_student_id" />

    <EditText
        android:id="@+id/et_login_pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="입력"
        android:inputType="textPassword"
        android:textColor="#4a4a4a"
        android:textColorHint="#c4c4c4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_login_student_id"
        app:layout_constraintTop_toBottomOf="@+id/et_login_student_id" />

    <Button
        android:id="@+id/btn_login_join"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="41dp"
        android:background="#ffffffff"
        android:gravity="center"
        android:text="*회원가입"
        android:textColor="#475058"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_login_forgot_pw"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_pw" />

    <Button
        android:id="@+id/btn_login_forgot_pw"
        android:layout_width="168dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="41dp"
        android:layout_marginStart="0.5dp"
        android:gravity="center"
        android:textColor="#475058"
        android:background="#ffffffff"
        android:text="*패스워드 분실"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_login_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_login_pw" />

    <ImageButton
        android:id="@+id/btn_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/group" />

    <TextView
        android:id="@+id/txt_login_err"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text=" *학번과 일치하는 비밀번호가 아닙니다"
        android:textColor="#fb3a2f"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_forgot_pw" />


    <TextView
        android:id="@+id/txt_login_err_noinput"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text=" *학번과 비밀번호를 모두 입력해주세요"
        android:textColor="#fb3a2f"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_forgot_pw" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_mainpage" />


</android.support.constraint.ConstraintLayout>