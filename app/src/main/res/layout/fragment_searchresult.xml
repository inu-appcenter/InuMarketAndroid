<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment_searchresult">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_constraint_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="157dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txt_search_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="7dp"
            android:text="검색결과 00"
            android:textColor="@color/Textgunmetal"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_searchresult_partition" />

        <TextView
            android:id="@+id/txt_search_searchtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="25dp"
            android:text="'책'"
            android:textColor="@color/Textgunmetal"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_searchresult_partition" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_searchresult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="74dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_searchresult_partition">

        </android.support.v7.widget.RecyclerView>

        <Spinner
            android:id="@+id/spinner_searchresult"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/roundshadowbutton"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_searchresult_partition" />

        <View
            android:id="@+id/view_searchresult_partition"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/backgroundblank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>