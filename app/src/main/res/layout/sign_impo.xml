<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/group" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/img_next"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".register.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:textColor="#475058"
            android:textSize="20sp"
            android:text="회원가입 완료 하기" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_gravity="center"
            android:src="@drawable/main" />

        <ImageView
            android:layout_width="258.3dp"
            android:layout_height="20.7dp"
            android:layout_marginTop="7.7dp"
            android:layout_gravity="center"
            android:src="@drawable/sign_impo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="13.6dp"
            android:layout_marginStart="28dp"
            android:textSize="12sp"
            android:text="이름" />

        <TextView
            android:id="@+id/tex_name"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="#9b9b9b"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="28dp"
            android:textSize="12sp"
            android:text="학번" />

        <TextView
            android:id="@+id/num_student"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:textColor="#9b9b9b"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="22dp"
            android:layout_marginStart="28dp"
            android:textSize="12sp"
            android:text="전화번호" />

        <TextView
            android:id="@+id/tex_number"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:textColor="#9b9b9b"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:ems="10"
            android:padding="12dp"
            />



    </LinearLayout>

</RelativeLayout>
