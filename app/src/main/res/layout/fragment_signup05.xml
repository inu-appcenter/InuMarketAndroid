<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_sign5_next"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text = "완료"
        android:textSize="20sp"
        android:textColor="@color/Textgunmetal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bottom_confirm"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_sign5_next"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".register.Fragment_Signup01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:textColor="@color/Textgunmetal"
            android:textSize="20sp"
            android:text="회원가입 완료 하기" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_gravity="center"
            android:src="@drawable/signup_step_review" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Textgunmetal"
            android:layout_marginTop="13dp"
            android:layout_marginStart="28dp"
            android:textSize="12sp"
            android:text="이름" />

        <TextView
            android:id="@+id/txt_signup_step5_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:paddingStart="14dp"
            android:layout_marginHorizontal="20dp"
            android:ems="10"
            android:layout_gravity="center"
            android:textColor="@color/warm_grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f6f8fa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Textgunmetal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="28dp"
            android:textSize="12sp"
            android:text="학번" />

        <TextView
            android:id="@+id/txt_signup_step5_stdid"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:paddingStart="14dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/warm_grey"
            android:ems="10"
            android:inputType="textPersonName"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f6f8fa"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Textgunmetal"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:text="전화번호" />

        <TextView
            android:id="@+id/txt_signup_step5_tel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:paddingStart="14dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/warm_grey"
            android:ems="10"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f6f8fa"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@color/Textgunmetal"
        android:textSize="15sp"
        android:text="학생 정보를 확인했으면\n회원 가입을 완료해주세요!"
        android:layout_above="@id/btn_sign5_next"
        />

</RelativeLayout>
