<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_sign4_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:text="다음"
        android:textSize="20sp"
        android:textColor="@color/Textgunmetal"
        android:gravity="center"
        android:background="@drawable/bottom_confirm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_sign4_next"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".register.Fragment_Signup01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:textColor="#475058"
            android:textSize="20sp"
            android:text="휴대폰 인증" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_gravity="center"
            android:src="@drawable/signup_step_tel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="107dp"
            android:textColor="@color/Textgunmetal"
            android:textSize="16sp"
            android:text="내 전화번호" />

        <EditText
            android:id="@+id/et_signup_step4"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/Textgunmetal"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_signup_step4_noinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="227dp"
            android:textColor="@color/orangey_red"
            android:textSize="12sp"
            android:text="*전화번호를 입력해주세요"/>


    </LinearLayout>
</RelativeLayout>